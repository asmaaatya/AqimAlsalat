<idea-plugin>
    <id>com.github.asmaaatya.aqimsalat</id>
    <name>Aqim As-Salat</name>
    <vendor>asmaaatya</vendor>

    <depends>com.intellij.modules.platform</depends>
    <resource-bundle>messages.MyBundle</resource-bundle>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.asmaaatya.aqimsalat.toolWindow.PrayerTimeToolWindowFactory" id="PrayerTimesToolWindow"/>
        <applicationConfigurable instance="com.github.asmaaatya.aqimsalat.setting.PrayerSettingsConfigurable"/>
        <projectService serviceImplementation="com.github.asmaaatya.aqimsalat.startup.MyProjectActivity"/>
        <notificationGroup id="PrayerTimeTest" displayType="BALLOON" isLogByDefault="true"/>
    </extensions>

    <actions>
        <action id="AqimAsSalat.ShowTimes"
            class="com.github.asmaaatya.aqimsalat.actions.TestModeAction"
            text="Show Prayer Times">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <description>A plugin to remind developers of Islamic prayer times inside the IDE.</description>
    <change-notes><![CDATA[
        Initial release:
        <ul>
            <li>Prayer time notifications with calculation method support</li>
            <li>IDE alert and optional auto-close</li>
            <li>Settings panel for customizations</li>
        </ul>
    ]]></change-notes>
</idea-plugin>
